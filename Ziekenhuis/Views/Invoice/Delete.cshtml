
@model Ziekenhuis.Ziekenhuis.ViewModels.InvoiceViewModel

<h4>Delete factuur voor @Model.ClientFullName </h4>
<h4 class=" purpleJP">Doctor is @Model.DoctorFullName</h4>

@using (Html.BeginForm())
{
    <!-- Zonder BeginForm werkt de Submit niet en wordt dit consult niet verwijderd -->
    @Html.AntiForgeryToken()


<fieldset disabled>
    <legend>Details</legend>

    <!-- InvoiceNumber zit niet in _InvoiceFieldsPartial, omdat de Create View geen Inv nummer toont -->
    <div class="form-group">
        @Html.LabelFor(i => i.Invoice.InvoiceNumber, htmlAttributes: new { @class = "label-for-JP" })
        @Html.TextBoxFor(i => i.Invoice.InvoiceNumber)
    </div>

    <!-- Onderstaande mag ook zonder .cshtml extensie gecodeerd worden: -->
    <partial name="SharedViewsInvoice/_InvoiceFieldsPartial.cshtml" for="@Model" />
</fieldset>


    <div>
        <input type="submit" value="Verwijder" class="redJP" />
    </div>

    <br />
    <br />

    <!-- Onderstaande mag ook met .cshtml extensie gecodeerd worden: -->
    <partial name="SharedViewsInvoice/_ButtonToInvoiceListPartial" for="@Model" />

}
